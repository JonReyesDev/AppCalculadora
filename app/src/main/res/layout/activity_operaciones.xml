<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperacionesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10sp"
        android:paddingBottom="10sp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario: "
            android:id="@+id/outUsuario"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingBottom="10sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inNum1"
            android:inputType="numberDecimal"
            android:hint="Número 1"
            android:paddingBottom="10sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inNum2"
            android:inputType="numberDecimal"
            android:hint="Número 2"
            android:paddingBottom="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/outResultado"
            android:text="Resultado: "
            android:textSize="22dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:orientation="horizontal">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSumar"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="#1565C0"
                    android:text="+"
                    android:textSize="30sp"
                    android:layout_gravity="fill"/>

                <Button
                    android:id="@+id/btnRestar"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="#C62828"
                    android:text="-"
                    android:textSize="30sp"
                    android:layout_gravity="fill"/>

                <Button
                    android:id="@+id/btnMultiplicar"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="#FF8F00"
                    android:text="x"
                    android:textSize="30sp"
                    android:layout_gravity="fill"/>

                <Button
                    android:id="@+id/btnDividir"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:backgroundTint="#FF8F00"
                    android:text="/"
                    android:textSize="30sp"
                    android:layout_gravity="fill"/>
            </GridLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#121111"
            android:text="Limpiar" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#736C6C"
            android:text="Regresar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
